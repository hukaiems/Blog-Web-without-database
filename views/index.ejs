<%- include('partials/header.ejs') %>

<div class="flex justify-center px-4 m-8">
  <div
    class="flex flex-col md:flex-row items-center justify-between gap-4 bg-gradient-to-r from-[#8CCDEB] to-white p-4 text-black p-6 rounded-xl w-2/3 h-32 max-w-4xl shadow-lg"
  >
    <h2 class="text-2xl md:text-3xl font-semibold text-center md:text-left">
      Ready to create a new post?
    </h2>
    <a
      href="/create"
      class="bg-white text-blue-600 font-semibold px-5 py-2 rounded-lg shadow hover:bg-blue-100 transition"
    >
      + New Post
    </a>
  </div>
</div>


<!-- âœ… This wraps ALL posts in a 3-column grid -->
<div class="min-h-screen flex justify-center">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 ml-4 w-2/3">
    <% posts.forEach((p, index) => { %>
    <div
      class="bg-gradient-to-r from-[#8CCDEB] to-white p-4 rounded shadow h-72 w-xs flex justify-between flex-col
              transform transition duration-300 hover:scale-105 hover:shadow-xl"
    >
      <h2 class="font-bold text-lg mb-2"><%= p.title %></h2>
      <p class="mb-4"><%= p.content %></p>
      <div class="flex gap-4">
        <a
          href="/update/<%= index %>"
          class="hover:bg-yellow-200 px-2 py-1 rounded bg-white"
          >Update</a
        >
        <form method="POST" action="delete">
          <input value="<%= index %>" name="index" type="hidden" />
          <button
            type="submit"
            class="hover:bg-red-200 px-2 py-1 rounded bg-red-300"
          >
            Delete
          </button>
        </form>
      </div>
    </div>
    <% }); %>
  </div>
</div>
